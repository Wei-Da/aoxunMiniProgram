.container {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.container-page {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
}
.group {
  display: block;
  width: 100%;
}
.group-header {
  line-height: 70rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 0 20rpx;
  background: #f9f9f9;
}
.group-body {
  background: #fff;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
}
.img-upload {
  font-size: 0;
  overflow: hidden;
  margin: 5rpx 5rpx;
}
.group-body .input-list {
  margin: 0;
  border: none;
  padding: 0 20rpx;
  background: #fff;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
}
.input-list .input-item {
  padding: 20rpx;
  line-height: 2.4;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 30rpx;
  border-top: 1rpx solid #e8e8e8;
}
.input-item-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.input-item-lable {
  display: block;
  color: #666;
}
.image-dis {
  margin: 5rpx;
  width: 80rpx;
  height: 80rpx;
}
.input-item-change {
  display: block;
  width: 2em;
  color: #49B2F2;
}
.add_image {
  background: #FFF;
  border-top: 1rpx solid #ddd;
}
.input-item-full {
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
textarea {
  display: block;
  position: relative;
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #e8e8e8;
  padding: 20rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
/*画廊*/
.gallery {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
/*每张图片所占容器*/
.item {
  position: relative;
  margin: 5px;
}
/*删除按钮*/
.delete {
  position: absolute;
  height: 20px;
  bottom: 0;
  width: 100%;
  background: #ccc;
  opacity: .8;
}
.delete image {
  position: absolute;
  width: 20px;
  height: 20px;
}
.btn-orange {
  margin-top: 20rpx;
  background: #49B2F2;
  color: #fff;
}

